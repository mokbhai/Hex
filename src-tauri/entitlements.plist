<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Audio recording for voice-to-text -->
	<key>com.apple.security.device.audio-input</key>
	<true/>

	<!-- Network access for OpenAI API and model downloads -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- Network server for local development (optional) -->
	<key>com.apple.security.network.server</key>
	<true/>

	<!-- File access for app data directory -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>

	<!-- App Groups for sharing data between processes -->
	<key>com.apple.security.application-groups</key>
	<array>
		<string>com.mokshitjain.hex</string>
	</array>

	<!-- Accessibility access is requested via Privacy prompt, not entitlements -->
	<!-- Input monitoring is requested via Privacy prompt, not entitlements -->

	<!-- Disable App Sandbox for development -->
	<!-- Note: For production distribution, you'll need to enable sandboxing -->
	<!-- and use more specific entitlements for each required permission -->
	<key>com.apple.security.get-task-allow</key>
	<true/>
</dict>
</plist>
