{
  "name": "vox-app",
  "version": "0.6.9",
  "description": "Release metadata + changelog automation for the Vox macOS app.",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "release": "cd tools && bun run build",
    "changeset": "changeset",
    "changeset:add": "changeset",
